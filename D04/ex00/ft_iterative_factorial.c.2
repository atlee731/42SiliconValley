int		ft_iterative_factorial(int nb);

int		ft_iterative_factorial(int nb)
{
	int	result;
	int	count;

	if(nb==0)
	{
		return(nb);
	}
	result = 1;
	count = 2;
	while(count<=nb)
	{
		result=result*count;
		count++;
	}
	return(result);
}
